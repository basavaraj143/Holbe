<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:layout_marginLeft="5dp"
    android:layout_weight="40"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:id="@+id/icon"
            android:background="@drawable/supplements_green"
            android:layout_gravity="center"
           />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:gravity="start|center"
            android:layout_weight="50"
            android:id="@+id/time"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:text="1:30 PM"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_weight="40"
            android:id="@+id/type"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Workout"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:baselineAligned="false"
        android:layout_weight="100"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:id="@+id/line"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="45">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/exc_img"
                        android:background="@drawable/comingupbg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:id="@+id/name"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="SITUP"
                        />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="55"
                android:background="#fff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="4 Reps of 10 Situps"
                    android:layout_gravity="start"
                    android:gravity="center|start"
                    android:paddingLeft="10dp"
                    android:id="@+id/repsandsitups"
                    android:layout_weight="20"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|start"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_gray"
                    android:layout_weight="10"
                    android:text="at 10:00 AM/6:00 PM"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:padding="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:background="@drawable/completedbtn"
                        android:layout_height="50dp"
                        android:id="@+id/complete"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"

                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/partial"
                        android:background="@drawable/partialbtn"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>